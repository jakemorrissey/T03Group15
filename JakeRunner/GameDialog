package mainPackage;

import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.TextField;
import javafx.scene.layout.VBox;
import javafx.scene.text.Text;
import javafx.stage.Modality;
import javafx.stage.Stage;

// Code adapted with inspiration from GitHub user AlmasB: 
// https://github.com/AlmasB/FXTutorials/tree/master/src/com/almasb/tutorial14

public class GameDialog extends Stage{

    private Text textGameOver = new Text();
    private Text textScore = new Text();

    private boolean correct = false;

    public GameDialog() {
        Button btnSubmit = new Button("Print Score");
        btnSubmit.setOnAction(event -> {
        	correct = true;
        	close();
        	
        
        });

        VBox vbox = new VBox(10, textGameOver, btnSubmit);
        vbox.setAlignment(Pos.CENTER);
        Scene scene = new Scene(vbox);

        setScene(scene);
        initModality(Modality.APPLICATION_MODAL);
    }

    public void open() {
        textGameOver.setText("Game Over");
        show();
    }

    public boolean isCorrect() {
        return correct;
    }
}
